<% content_for :head do %>
  <link rel="stylesheet" href="/assets/userbar.css.scss">
<% end %>

<div class="userbar">
  <% if current_user %>
    <div id="user_text">
      <p>Logado como <span id="user_name"><%= current_user.username %></span></p>
    </div>
    <div class="logout_button">
      <%= link_to 'Log Out', logout_path %>
    </div>
  <% end %>
</div>